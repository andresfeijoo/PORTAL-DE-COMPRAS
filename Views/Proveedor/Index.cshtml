}

<h2>Proveedor</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CUITProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CorreoProveedor)
        </th>
