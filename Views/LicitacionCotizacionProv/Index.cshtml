@model IEnumerable<PortalCompras.Models.LicitacionCotizacionProv>

@{
    ViewBag.Title = "Cotizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaCotizacionProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Licitacione.NombreLicitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.NombreProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proveedor.NombreProveedor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCotizacionProveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioUnitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Licitacione.NombreLicitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proveedor.NombreProveedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdCotizacion }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.IdCotizacion }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.IdCotizacion })|
            @Html.ActionLink("Proveedor", "Index", "Proveedor", new { Id = item.IdCotizacion }, null)|
